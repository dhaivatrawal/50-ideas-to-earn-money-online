<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_img"
        android:scaleType="fitXY"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rc"
        android:padding="15dp"
        android:layout_marginBottom="50dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="45dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/dollars"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginRight="7.5dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:src="@mipmap/common_icon"
                android:layout_marginLeft="5dp">
            </ImageView>
            <ImageView
                android:id="@+id/share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="11dp"
                android:scaleType="fitXY"
                android:layout_toRightOf="@+id/dollars"
                android:layout_centerVertical="true"
                android:src="@mipmap/share"
                android:layout_marginLeft="11dp">
            </ImageView>
            <ImageView
                android:id="@+id/rateMe"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginRight="11dp"
                android:scaleType="fitXY"
                android:layout_toRightOf="@+id/share"
                android:layout_centerVertical="true"
                android:src="@mipmap/rate"
                android:layout_marginLeft="11dp">
            </ImageView>

            <ImageView
                android:id="@+id/buttonShowCustomDialog"                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:src="@mipmap/developer"
                android:layout_toRightOf="@id/rateMe"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="5dp">

            </ImageView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>